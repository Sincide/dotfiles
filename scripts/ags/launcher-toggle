#!/bin/bash

# AGS Launcher Toggle - Debug Version

USERNAME=$(whoami)
TRIGGER_FILE="/tmp/ags-toggle-launcher-$USERNAME"

echo "Creating trigger file: $TRIGGER_FILE"
touch "$TRIGGER_FILE"

if [ -f "$TRIGGER_FILE" ]; then
    echo "Trigger file created successfully"
    ls -la "$TRIGGER_FILE"
else
    echo "ERROR: Failed to create trigger file"
fi
