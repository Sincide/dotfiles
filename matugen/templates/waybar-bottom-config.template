{
    "layer": "top",
    "position": "bottom",
    "height": 32,
    "margin-bottom": 4,
    "margin-left": 8,
    "margin-right": 8,
    "spacing": 4,
    
    "modules-left": [
        "custom/amdgpu-temp",
        "custom/amdgpu-fan", 
        "custom/amdgpu-usage",
        "custom/amdgpu-vram",
        "custom/amdgpu-power"
    ],
    
    "modules-center": [
        "cpu",
        "memory",
        "disk",
        "custom/updates",
        "custom/control-center"
    ],
    
    "modules-right": [
        "temperature",
        "custom/load",
        "custom/uptime",
        "custom/system-info"
    ],

    // ╭─────────────────────────────────────────────────────────╮
    // │                 AMDGPU MONITORING                       │
    // ╰─────────────────────────────────────────────────────────╯

    "custom/amdgpu-temp": {
        "format": "{}°C",
        "interval": 2,
        "exec": "~/dotfiles/scripts/theming/gpu_temp_monitor.sh",
        "tooltip": true,
        "tooltip-format": "🔥 AMDGPU Temperature\n🌡️ Dynamic thermal monitoring\n💀 Evil GPU Power"
    },

    "custom/amdgpu-fan": {
        "format": "{}%",
        "interval": 2,
        "exec": "~/dotfiles/scripts/theming/gpu_fan_monitor.sh",
        "tooltip": true,
        "tooltip-format": "💨 AMDGPU Fan Control\n🌪️ Dynamic cooling status\n⚡ Adaptive Speed"
    },

    "custom/amdgpu-usage": {
        "format": "{}%",
        "interval": 2,
        "exec": "~/dotfiles/scripts/theming/gpu_usage_monitor.sh",
        "tooltip": true,
        "tooltip-format": "🎮 AMDGPU Usage\n⚡ Dynamic utilization\n💥 Gaming Power"
    },

    "custom/amdgpu-vram": {
        "format": "{}",
        "interval": 2,
        "exec": "~/dotfiles/scripts/theming/gpu_vram_monitor.sh",
        "tooltip": true,
        "tooltip-format": "🧠 AMDGPU VRAM\n💾 Dynamic memory usage\n🌌 Graphics Memory"
    },

    "custom/amdgpu-power": {
        "format": "{}W",
        "interval": 2,
        "exec": "~/dotfiles/scripts/theming/gpu_power_monitor.sh",
        "tooltip": true,
        "tooltip-format": "⚡ AMDGPU Power Draw\n🔥 Dynamic consumption\n💀 Energy Monitor"
    },

    // ╭─────────────────────────────────────────────────────────╮
    // │                 CENTER MONITORING                       │
    // ╰─────────────────────────────────────────────────────────╯

    "cpu": {
        "format": "💀 CPU: {usage}%",
        "interval": 2,
        "tooltip": true,
        "tooltip-format": "🔥 CPU Status\n💀 Usage: {usage}%\n⚡ Cores: {load}\n🌡️ Evil Processing Power"
    },

    "memory": {
        "format": "🧠 RAM: {percentage}%",
        "interval": 2,
        "tooltip": true,
        "tooltip-format": "💾 Memory Status\n🧠 Used: {used} / {total}\n📊 Usage: {percentage}%\n💀 {avail} available"
    },

    "disk": {
        "format": "💾 {percentage_used}%",
        "interval": 30,
        "path": "/",
        "tooltip": true,
        "tooltip-format": "🗂️ Storage Status\n💾 Used: {used} / {total}\n📊 Usage: {percentage_used}%\n🌌 {free} free space"
    },

    "custom/updates": {
        "format": "📦 {}",
        "interval": 3600,
        "exec": "checkupdates 2>/dev/null | wc -l || echo '0'",
        "exec-if": "exit 0",
        "tooltip": true,
        "tooltip-format": "📦 System Updates\n⚡ {} packages available\n💀 Keep the void updated",
        "on-click": "kitty -e sudo pacman -Syu"
    },

    "custom/control-center": {
        "format": "🎛️",
        "tooltip": false,
        "on-click": "/home/martin/dotfiles/waybar/scripts/control-center.fish"
    },

    // ╭─────────────────────────────────────────────────────────╮
    // │                 RIGHT SYSTEM INFO                       │
    // ╰─────────────────────────────────────────────────────────╯

    "temperature": {
        "thermal-zone": 0,
        "format": "🌡️ {temperatureC}°C",
        "interval": 2,
        "critical-threshold": 80,
        "tooltip": true,
        "tooltip-format": "🔥 CPU Temperature\n🌡️ Current: {temperatureC}°C\n💀 Thermal monitoring"
    },

    "custom/load": {
        "format": "⚖️ Load: {}",
        "interval": 5,
        "exec": "uptime | awk -F'load average:' '{print $2}' | awk '{print $1}' | tr -d ','",
        "tooltip": true,
        "tooltip-format": "⚖️ System Load\n📊 1min: {}\n💀 Processing pressure"
    },

    "custom/uptime": {
        "format": "⏰ {}",
        "interval": 60,
        "exec": "uptime -p | sed 's/up //' | sed 's/ hours/h/' | sed 's/ hour/h/' | sed 's/ minutes/m/' | sed 's/ minute/m/' | sed 's/ days/d/' | sed 's/ day/d/'",
        "tooltip": true,
        "tooltip-format": "⏰ System Uptime\n🌌 Running: {}\n💀 Void persistence"
    },

    "custom/system-info": {
        "format": "🖥️ SYS",
        "interval": 3600,
        "exec": "echo 'INFO'",
        "tooltip": true,
        "tooltip-format": "🖥️ System Information\n💀 Arch Linux + Hyprland\n🌌 Evil Space Theme\n⚡ Material You Theming\n🎨 Dynamic Wallpaper Colors",
        "on-click": "kitty -e neofetch"
    }
} 