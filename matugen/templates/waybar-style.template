tooltip {
    background: #{{colors.surface_variant.default.hex_stripped}};
    border: 1px solid #{{colors.outline.default.hex_stripped}};
    border-radius: 8px;
    color: #{{colors.on_surface_variant.default.hex_stripped}};
} 